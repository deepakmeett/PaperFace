<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:id="@+id/scrollOne"
        android:scrollbarThumbVertical="@android:color/transparent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:paddingEnd="20dp"
            android:paddingStart="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/printer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:contentDescription="@string/content"
                android:src="@drawable/printer"/>

            <TextView
                android:id="@+id/proceed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/printer"
                android:layout_marginTop="8dp"
                android:text="@string/proceed"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="normal"/>

            <TextView
                android:id="@+id/login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/proceed"
                android:fontFamily="sans-serif-medium"
                android:text="@string/login"
                android:textColor="@color/darkBlack"
                android:textSize="24sp"/>

            <EditText
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/login"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="70dp"
                android:background="@drawable/edi"
                android:textSize="16sp"
                android:hint="@string/email_address"
                android:paddingStart="30dp"
                android:paddingEnd="30dp"
                android:textAllCaps="false"/>

            <EditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textSize="16sp"
                android:layout_below="@+id/email"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:background="@drawable/edi"
                android:hint="@string/password"
                android:paddingStart="30dp"
                android:paddingEnd="30dp"
                android:textAllCaps="false"/>

            <Button
                android:id="@+id/log_in"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/password"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="12dp"
                android:background="@drawable/btnblue"
                android:elevation="10dp"
                android:text="@string/log_in"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="19sp"/>

            <TextView
                android:id="@+id/forgot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/log_in"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:text="@string/forgot"
                android:textColor="@color/gray"
                android:textSize="16sp"/>
        </RelativeLayout>
    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/scrollOne"
        android:paddingEnd="20dp"
        android:paddingStart="20dp"
        android:paddingBottom="10dp"
        android:id="@+id/relateTwo">

        <TextView
            android:id="@+id/signUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:text="@string/signUp"
            android:textColor="@color/blue"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/are"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="5dp"
            android:layout_toStartOf="@+id/shopkeeper"
            android:text="@string/are"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/shopkeeper"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:text="@string/shopkeeper"
            android:textColor="@color/blue"
            android:textSize="18sp"/>
    </RelativeLayout>
</RelativeLayout>
