<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/blue"
    android:orientation="vertical"
    android:padding="10dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_one"
        android:layout_width="match_parent"
        android:layout_height="335dp"
        android:clickable="true"
        android:elevation="10dp"
        app:cardCornerRadius="25dp">

        <ImageView
            android:id="@+id/imageview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:padding="10dp"
            android:rotation="45"
            android:src="@drawable/ic_add_black_24dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:weightSum="2">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingStart="20dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp">

                <TextView
                    android:id="@+id/card_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:fontFamily="sans-serif-light"
                    android:text="@string/name"
                    android:textColor="@color/darkBlack"
                    android:textSize="18sp"/>
                <TextView
                    android:id="@+id/card_mobile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:layout_below="@id/card_name"

                    android:fontFamily="sans-serif-light"
                    android:text="Mobile Number"
                    android:textColor="@color/darkBlack"
                    android:textSize="18sp"/>

                <TextView
                    android:id="@+id/card_room"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/card_mobile"
                    android:layout_marginTop="14dp"
                    android:fontFamily="sans-serif-light"
                    android:text="@string/room_num"
                    android:textColor="@color/darkBlack"
                    android:textSize="18sp"/>

                <TextView
                    android:id="@+id/card_hostelNum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/card_room"
                    android:layout_marginTop="14dp"
                    android:fontFamily="sans-serif-light"
                    android:text="@string/hostel_name"
                    android:textColor="@color/darkBlack"
                    android:textSize="18sp"/>

                <TextView
                    android:id="@+id/card_Pages"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/card_hostelNum"
                    android:layout_marginTop="14dp"
                    android:fontFamily="sans-serif-light"
                    android:text="@string/page"
                    android:textColor="@color/darkBlack"
                    android:textSize="18sp"/>

                <TextView
                    android:id="@+id/card_Rupees"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/card_Pages"
                    android:layout_marginTop="14dp"
                    android:fontFamily="sans-serif-light"
                    android:text="@string/rupees"
                    android:textColor="@color/darkBlack"
                    android:textSize="18sp"/>


                <TextView
                    android:id="@+id/card_payment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/card_Rupees"
                    android:layout_marginTop="14dp"
                    android:fontFamily="sans-serif-light"
                    android:text="@string/payment"
                    android:textColor="@color/darkBlack"
                    android:textSize="18sp"/>

                <TextView
                    android:id="@+id/card_other"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/card_payment"
                    android:layout_marginTop="14dp"
                    android:fontFamily="sans-serif-light"
                    android:text="@string/other"
                    android:textColor="@color/darkBlack"
                    android:textSize="18sp"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="8dp">

                <TextView
                    android:id="@+id/card_name_blank"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:fontFamily="sans-serif-light"
                    android:text="@string/name"
                    android:textColor="@color/darkBlack"
                    android:textSize="18sp"/>
                <TextView
                    android:id="@+id/card_mobileno_blank"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:fontFamily="sans-serif-light"
                    android:text="Mobile No."
                    android:layout_below="@id/card_name_blank"

                    android:textColor="@color/darkBlack"
                    android:textSize="18sp"/>

                <TextView
                    android:id="@+id/card_room_blank"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/card_mobileno_blank"
                    android:layout_marginTop="14dp"
                    android:fontFamily="sans-serif-light"
                    android:text="@string/room_num"
                    android:textColor="@color/darkBlack"
                    android:textSize="18sp"/>

                <TextView
                    android:id="@+id/card_hostelNum_blank"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/card_room_blank"
                    android:layout_marginTop="14dp"
                    android:fontFamily="sans-serif-light"
                    android:text="@string/hostel_name"
                    android:textColor="@color/darkBlack"
                    android:textSize="18sp"/>

                <TextView
                    android:id="@+id/card_Pages_Blank"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/card_hostelNum_blank"
                    android:layout_marginTop="14dp"
                    android:fontFamily="sans-serif-light"
                    android:text="@string/page"
                    android:textColor="@color/darkBlack"
                    android:textSize="18sp"/>

                <TextView
                    android:id="@+id/card_Rupees_Blank"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/card_Pages_Blank"
                    android:layout_marginTop="14dp"
                    android:fontFamily="sans-serif-light"
                    android:text="@string/rupees"
                    android:textColor="@color/darkBlack"
                    android:textSize="18sp"/>
                <TextView
                    android:id="@+id/card_payment_blank"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/card_Rupees_Blank"
                    android:layout_marginTop="14dp"
                    android:fontFamily="sans-serif-light"
                    android:text="@string/payment"
                    android:textColor="@color/darkBlack"
                    android:textSize="18sp"/>

                <TextView
                    android:id="@+id/card_other_blank"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/card_payment_blank"
                    android:layout_marginTop="14dp"
                    android:fontFamily="sans-serif-light"
                    android:text="@string/other"
                    android:textColor="@color/darkBlack"
                    android:textSize="18sp"/>
            </RelativeLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>